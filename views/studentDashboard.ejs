<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>
  <meta name="csrf-token" content="<%= csrfToken %>" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 font-sans">

  <nav class="bg-blue-600 text-white px-6 py-4 flex justify-between items-center">
    <h1 class="text-xl font-bold">LMS Student Dashboard</h1>
    <a href="/logout" class="bg-white text-blue-600 px-4 py-2 rounded hover:bg-gray-200 transition">Logout</a>
  </nav>

  <main class="max-w-5xl mx-auto mt-8 p-4">
    <h2 class="text-2xl font-semibold mb-6">Welcome, <%= studentName %> ðŸ‘‹</h2>

    <section class="mb-10">
      <h3 class="text-xl font-bold mb-4">Your Courses</h3>

      <% if (enrolledCourses && enrolledCourses.length === 0) { %>
        <p class="text-gray-600">You're not enrolled in any courses yet.</p>
      <% } else { %>
        <div class="grid md:grid-cols-2 gap-6">
          <% enrolledCourses.forEach(course => { %>
            <div class="bg-white shadow-lg rounded-2xl p-6">
              <h4 class="text-lg font-semibold mb-2"><%= course.title %></h4>
              <p class="text-gray-600 mb-2"><%= course.description %></p>
              <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
                <div class="bg-blue-500 h-3 rounded-full transition-all duration-300" <%= course.progress %>"></div>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-700"><%= course.progress %>% completed</span>
                <a href="/courses/<%= course.id %>/continue" class="text-sm text-blue-600 hover:underline">Continue</a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </section>

    <section>
      <h3 class="text-xl font-bold mb-4">Certificates</h3>
      <% if (certificates && certificates.length === 0) { %>
        <p class="text-gray-600">You havenâ€™t earned any certificates yet.</p>
      <% } else { %>
        <ul class="list-disc list-inside text-gray-700 space-y-2">
          <% certificates.forEach(cert => { %>
            <li>
              <a href="/certificates/<%= cert.id %>" class="text-blue-600 hover:underline">
                Certificate for <%= cert.courseTitle %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>
  </main>

</body>
</html>